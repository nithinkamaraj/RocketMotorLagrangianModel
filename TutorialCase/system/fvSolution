FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    p_rgh
    {
        solver           GAMG;
        smoother        DICGaussSeidel;
        minIter         2;
        tolerance       1e-06;
        relTol          0;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }

    Phi
    {
        $p_rgh;
    }

    "(U|k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;

        tolerance       1e-06;
        relTol          0;
    }

    "(U|k|omega)Final"
    {
        $U;
        relTol          0;
    }

    "(Yi|air)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        minIter         6;
        tolerance       1e-06;
        relTol          0;
    }

    h
    {

          solver          PBiCGStab;
        preconditioner  DILU;
        minIter         6;
        tolerance       1e-06;
        relTol          0;

    }

    hFinal
    {
        $h;
    }
}

