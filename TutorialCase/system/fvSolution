PIMPLE
{
    nOuterCorrectors 50;
    nCorrectors     5;
    nNonOrthogonalCorrectors 1;
    momentumPredictor  no;
        transonic      yes;


        residualControl
           {
               U
               {
                       tolerance  1e-6;
                       relTol      0.1;
               }

               p_rgh
               {
                       tolerance  1e-6;
                       relTol      0.1;
               }

               h
               {

                       tolerance  1e-6;
                       relTol      0.1;
               }

            }
       }





relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}


